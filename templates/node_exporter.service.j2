[Unit]
Description=Prometheus Node Exporter
Wants=network-online.target
After=network-online.target

[Service]
User={{ prometheus_node_exporter_user }}
Group={{ prometheus_node_exporter_user }}
Type=simple
ExecStart={{ prometheus_install_dir }}/node_exporter --collector.textfile.directory={{ prometheus_node_exporter_dir }}/ --collector.filesystem.ignored-mount-points="(\/var\/lib\/docker\/.*\/(merged|mounts)|\/run\/docker\/netns\/)(.*)"

[Install]
WantedBy=multi-user.target
